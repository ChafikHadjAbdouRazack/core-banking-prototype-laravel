# Demo Environment Configuration
# Copy this file to .env for demo mode setup

APP_NAME="FinAegis Demo"
APP_ENV=demo
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Demo Mode Settings
DEMO_MODE=true
DEMO_INSTANT_DEPOSITS=true
DEMO_SKIP_KYC=true
DEMO_MOCK_BANKS=true
DEMO_FAKE_BLOCKCHAIN=true
DEMO_FIXED_EXCHANGE_RATES=true
DEMO_AUTO_APPROVE_TRANSACTIONS=true

# Demo Data Configuration
DEMO_DEFAULT_DEPOSIT_AMOUNT=10000
DEMO_DEFAULT_CURRENCY=USD
DEMO_PROCESSING_DELAY=0
DEMO_SUCCESS_RATE=100

# Demo Indicators
DEMO_SHOW_BANNER=true
DEMO_BANNER_MESSAGE="Demo Mode - No real transactions"
DEMO_BANNER_COLOR=warning
DEMO_WATERMARK=true

# Demo User Settings
DEMO_AUTO_CREATE_USERS=true
DEMO_DEFAULT_BALANCE=100000
DEMO_KYC_STATUS=verified

# Demo Security
DEMO_ENFORCE_DB=true
DEMO_DISABLE_EXTERNAL_APIS=true
DEMO_DATA_RETENTION_DAYS=7
DEMO_MAX_ACCOUNTS=1000

# Demo Cleanup Settings
DEMO_CLEANUP_ENABLED=true
DEMO_CLEANUP_RETENTION_DAYS=1
DEMO_CLEANUP_TIME="03:00"

# Sandbox Mode (disabled by default in demo)
DEMO_SANDBOX_ENABLED=false
STRIPE_TEST_MODE=true

# Database (use separate demo database)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=finaegis_demo
DB_USERNAME=root
DB_PASSWORD=

# Cache & Queue (use array driver for demo)
BROADCAST_DRIVER=log
CACHE_DRIVER=array
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Redis (disabled for demo)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail (use log driver for demo)
MAIL_MAILER=log
MAIL_HOST=
MAIL_PORT=
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="demo@finaegis.com"
MAIL_FROM_NAME="${APP_NAME}"

# External Services (all disabled/mocked in demo)
STRIPE_KEY=pk_test_demo
STRIPE_SECRET=sk_test_demo
STRIPE_WEBHOOK_SECRET=whsec_demo

COINBASE_COMMERCE_API_KEY=demo_key
COINBASE_COMMERCE_WEBHOOK_SECRET=demo_secret

# Bank API Keys (demo mode)
PAYSERA_CLIENT_ID=demo
PAYSERA_CLIENT_SECRET=demo
PAYSERA_SANDBOX_URL=https://sandbox.paysera.com

SANTANDER_CLIENT_ID=demo
SANTANDER_CLIENT_SECRET=demo
SANTANDER_SANDBOX_URL=https://sandbox.santander.com

# Blockchain Settings (testnets for demo)
BITCOIN_NETWORK=testnet
ETHEREUM_NETWORK=sepolia
POLYGON_NETWORK=mumbai

# Exchange Rate Providers (fixed rates in demo)
EXCHANGE_RATE_PROVIDER=demo
FIXER_API_KEY=demo
CURRENCYLAYER_API_KEY=demo

# Security Settings for Demo
APP_DEMO_SECURITY=strict
DEMO_IP_WHITELIST=
DEMO_RATE_LIMIT=100

# Analytics (disabled for demo)
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# AWS Services (disabled for demo)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher (disabled for demo)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Laravel Specific
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"