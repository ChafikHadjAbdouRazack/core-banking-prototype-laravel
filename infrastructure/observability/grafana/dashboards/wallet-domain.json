{
  "description": "FinAegis Wallet Domain - Blockchain wallet and transaction metrics",
  "editable": true,
  "id": null,
  "panels": [
    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {"defaults": {"unit": "short"}},
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
      "id": 1,
      "title": "Total Wallets",
      "type": "stat",
      "targets": [{"expr": "wallet_total_count", "refId": "A"}]
    },
    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {"defaults": {"unit": "currencyUSD"}},
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
      "id": 2,
      "title": "Total Value Locked",
      "type": "stat",
      "targets": [{"expr": "sum(wallet_balance_usd_total)", "refId": "A"}]
    },
    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {"defaults": {"unit": "short"}},
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
      "id": 3,
      "title": "Pending Transactions",
      "type": "stat",
      "targets": [{"expr": "wallet_pending_transactions_total", "refId": "A"}]
    },
    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {"defaults": {"unit": "short", "thresholds": {"steps": [{"color": "green", "value": null}, {"color": "yellow", "value": 5}, {"color": "red", "value": 20}]}}},
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
      "id": 4,
      "title": "Failed Transactions (1h)",
      "type": "stat",
      "targets": [{"expr": "increase(wallet_transactions_failed_total[1h])", "refId": "A"}]
    },
    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
      "id": 5,
      "title": "Transaction Rate by Type",
      "type": "timeseries",
      "targets": [
        {"expr": "rate(wallet_transactions_total{type=\"deposit\"}[5m])", "legendFormat": "Deposits", "refId": "A"},
        {"expr": "rate(wallet_transactions_total{type=\"withdrawal\"}[5m])", "legendFormat": "Withdrawals", "refId": "B"},
        {"expr": "rate(wallet_transactions_total{type=\"transfer\"}[5m])", "legendFormat": "Transfers", "refId": "C"}
      ]
    },
    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
      "id": 6,
      "title": "Balance by Blockchain",
      "type": "piechart",
      "targets": [{"expr": "sum(wallet_balance_usd_total) by (blockchain)", "legendFormat": "{{blockchain}}", "refId": "A"}]
    },
    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {"defaults": {"unit": "s"}},
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
      "id": 7,
      "title": "Transaction Confirmation Time",
      "type": "timeseries",
      "targets": [
        {"expr": "histogram_quantile(0.50, rate(wallet_confirmation_time_seconds_bucket[5m]))", "legendFormat": "p50", "refId": "A"},
        {"expr": "histogram_quantile(0.95, rate(wallet_confirmation_time_seconds_bucket[5m]))", "legendFormat": "p95", "refId": "B"},
        {"expr": "histogram_quantile(0.99, rate(wallet_confirmation_time_seconds_bucket[5m]))", "legendFormat": "p99", "refId": "C"}
      ]
    },
    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
      "id": 8,
      "title": "Gas Fees Spent",
      "type": "timeseries",
      "targets": [{"expr": "rate(wallet_gas_fees_total[5m])", "legendFormat": "{{blockchain}}", "refId": "A"}]
    }
  ],
  "refresh": "30s",
  "schemaVersion": 38,
  "tags": ["finaegis", "wallet", "blockchain"],
  "time": {"from": "now-1h", "to": "now"},
  "title": "FinAegis Wallet Domain",
  "uid": "finaegis-wallet",
  "version": 1
}
