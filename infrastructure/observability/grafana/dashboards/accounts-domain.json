{
  "description": "FinAegis Accounts Domain - Customer accounts and balance metrics",
  "editable": true,
  "id": null,
  "panels": [
    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {"defaults": {"unit": "short"}},
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
      "id": 1,
      "title": "Total Accounts",
      "type": "stat",
      "targets": [{"expr": "accounts_total", "refId": "A"}]
    },
    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {"defaults": {"unit": "short"}},
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
      "id": 2,
      "title": "Active Accounts",
      "type": "stat",
      "targets": [{"expr": "accounts_active_total", "refId": "A"}]
    },
    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {"defaults": {"unit": "currencyUSD"}},
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
      "id": 3,
      "title": "Total Balance (All Accounts)",
      "type": "stat",
      "targets": [{"expr": "sum(accounts_balance_total)", "refId": "A"}]
    },
    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {"defaults": {"unit": "short"}},
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
      "id": 4,
      "title": "New Accounts (24h)",
      "type": "stat",
      "targets": [{"expr": "increase(accounts_created_total[24h])", "refId": "A"}]
    },
    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
      "id": 5,
      "title": "Account Registrations",
      "type": "timeseries",
      "targets": [{"expr": "rate(accounts_created_total[5m])", "legendFormat": "Registrations", "refId": "A"}]
    },
    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
      "id": 6,
      "title": "Accounts by Type",
      "type": "piechart",
      "targets": [{"expr": "accounts_by_type_total", "legendFormat": "{{type}}", "refId": "A"}]
    },
    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
      "id": 7,
      "title": "Balance Changes",
      "type": "timeseries",
      "targets": [
        {"expr": "rate(accounts_deposits_total[5m])", "legendFormat": "Deposits", "refId": "A"},
        {"expr": "rate(accounts_withdrawals_total[5m])", "legendFormat": "Withdrawals", "refId": "B"}
      ]
    },
    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
      "id": 8,
      "title": "Account Status Distribution",
      "type": "piechart",
      "targets": [{"expr": "accounts_by_status_total", "legendFormat": "{{status}}", "refId": "A"}]
    }
  ],
  "refresh": "30s",
  "schemaVersion": 38,
  "tags": ["finaegis", "accounts"],
  "time": {"from": "now-1h", "to": "now"},
  "title": "FinAegis Accounts Domain",
  "uid": "finaegis-accounts",
  "version": 1
}
