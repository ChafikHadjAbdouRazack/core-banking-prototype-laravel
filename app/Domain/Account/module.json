{
    "$schema": "https://finaegis.io/schemas/module.json",
    "name": "finaegis/account",
    "version": "1.3.0",
    "description": "Core account management with balances, transactions, and ledger",
    "type": "core",
    "dependencies": {
        "required": {
            "finaegis/shared": "^1.0"
        },
        "optional": {}
    },
    "provides": {
        "interfaces": [
            "App\\Domain\\Account\\Contracts\\AccountServiceInterface",
            "App\\Domain\\Account\\Contracts\\BalanceServiceInterface"
        ],
        "events": [
            "AccountCreated",
            "AccountUpdated",
            "AccountClosed",
            "BalanceUpdated",
            "TransactionRecorded"
        ],
        "commands": [
            "CreateAccountCommand",
            "UpdateAccountCommand",
            "CloseAccountCommand"
        ]
    },
    "paths": {
        "routes": "Routes/api.php",
        "migrations": "Database/Migrations",
        "config": "Config/account.php",
        "tests": "Tests"
    }
}
