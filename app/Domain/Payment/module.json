{
    "$schema": "https://finaegis.io/schemas/module.json",
    "name": "finaegis/payment",
    "version": "1.3.0",
    "description": "Payment processing with multiple gateway support",
    "type": "optional",
    "dependencies": {
        "required": {
            "finaegis/shared": "^1.0",
            "finaegis/account": "^1.0"
        },
        "optional": {
            "finaegis/compliance": "^1.0"
        }
    },
    "provides": {
        "interfaces": [],
        "events": [
            "PaymentInitiated",
            "PaymentCompleted",
            "PaymentFailed",
            "PaymentRefunded"
        ],
        "commands": [
            "ProcessPaymentCommand",
            "RefundPaymentCommand"
        ]
    },
    "paths": {
        "routes": "Routes/api.php",
        "migrations": "Database/Migrations",
        "config": "Config/payment.php",
        "tests": "Tests"
    }
}
