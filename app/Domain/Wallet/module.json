{
    "$schema": "https://finaegis.io/schemas/module.json",
    "name": "finaegis/wallet",
    "version": "1.3.0",
    "description": "Blockchain wallet management with multi-chain support",
    "type": "optional",
    "dependencies": {
        "required": {
            "finaegis/shared": "^1.0",
            "finaegis/account": "^1.0"
        },
        "optional": {
            "finaegis/compliance": "^1.0"
        }
    },
    "provides": {
        "interfaces": [],
        "events": [
            "WalletCreated",
            "WalletFunded",
            "WalletWithdrawal",
            "WalletLocked",
            "WalletUnlocked"
        ],
        "commands": [
            "CreateWalletCommand",
            "FundWalletCommand",
            "WithdrawFromWalletCommand"
        ]
    },
    "paths": {
        "routes": "Routes/api.php",
        "migrations": "Database/Migrations",
        "config": "Config/wallet.php",
        "tests": "Tests"
    }
}
