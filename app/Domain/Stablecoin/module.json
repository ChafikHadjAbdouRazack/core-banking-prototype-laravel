{
    "$schema": "https://finaegis.io/schemas/module.json",
    "name": "finaegis/stablecoin",
    "version": "1.3.0",
    "description": "Stablecoin lifecycle management with minting, burning, and reserve tracking",
    "type": "optional",
    "dependencies": {
        "required": {
            "finaegis/shared": "^1.0",
            "finaegis/account": "^1.0",
            "finaegis/compliance": "^1.0"
        },
        "optional": {
            "finaegis/wallet": "^1.0"
        }
    },
    "provides": {
        "interfaces": [
            "App\\Domain\\Stablecoin\\Contracts\\MintingServiceInterface",
            "App\\Domain\\Stablecoin\\Contracts\\ReserveServiceInterface"
        ],
        "events": [
            "StablecoinMinted",
            "StablecoinBurned",
            "ReserveUpdated",
            "ReserveAuditCompleted"
        ],
        "commands": [
            "MintStablecoinCommand",
            "BurnStablecoinCommand",
            "UpdateReserveCommand"
        ]
    },
    "paths": {
        "routes": "Routes/api.php",
        "migrations": "Database/Migrations",
        "config": "Config/stablecoin.php",
        "tests": "Tests"
    }
}
