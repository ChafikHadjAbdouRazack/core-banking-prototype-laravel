{
    "$schema": "https://finaegis.io/schemas/module.json",
    "name": "finaegis/ai",
    "version": "1.3.0",
    "description": "AI framework with LLM integration, MCP tools, and conversation management",
    "type": "optional",
    "dependencies": {
        "required": {
            "finaegis/shared": "^1.0"
        },
        "optional": {
            "finaegis/agent-protocol": "^1.0"
        }
    },
    "provides": {
        "interfaces": [
            "App\\Domain\\AI\\Contracts\\LLMProviderInterface",
            "App\\Domain\\AI\\Contracts\\ConversationServiceInterface"
        ],
        "events": [
            "ConversationStarted",
            "MessageReceived",
            "ToolExecuted",
            "ConversationEnded"
        ],
        "commands": [
            "StartConversationCommand",
            "SendMessageCommand",
            "ExecuteToolCommand"
        ]
    },
    "paths": {
        "routes": "Routes/api.php",
        "migrations": "Database/Migrations",
        "config": "Config/ai.php",
        "tests": "Tests"
    }
}
