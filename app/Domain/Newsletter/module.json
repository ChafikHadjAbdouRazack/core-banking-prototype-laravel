{
    "$schema": "https://finaegis.io/schemas/module.json",
    "name": "finaegis/newsletter",
    "version": "1.3.0",
    "description": "Newsletter subscription and email campaign management",
    "type": "optional",
    "dependencies": {
        "required": {
            "finaegis/shared": "^1.0"
        },
        "optional": {
            "finaegis/user": "^1.0"
        }
    },
    "provides": {
        "interfaces": [],
        "events": [
            "NewsletterSubscribed",
            "NewsletterUnsubscribed",
            "CampaignSent"
        ],
        "commands": [
            "SubscribeToNewsletterCommand",
            "SendCampaignCommand"
        ]
    },
    "paths": {
        "migrations": "Database/Migrations",
        "tests": "Tests"
    }
}
