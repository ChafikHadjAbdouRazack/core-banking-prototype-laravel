{
    "$schema": "https://finaegis.io/schemas/module.json",
    "name": "finaegis/governance",
    "version": "1.3.0",
    "description": "Voting and governance with proposal management and token-weighted voting",
    "type": "optional",
    "dependencies": {
        "required": {
            "finaegis/shared": "^1.0",
            "finaegis/account": "^1.0"
        },
        "optional": {
            "finaegis/stablecoin": "^1.0"
        }
    },
    "provides": {
        "interfaces": [],
        "events": [
            "ProposalCreated",
            "VoteCast",
            "ProposalPassed",
            "ProposalRejected",
            "ProposalExecuted"
        ],
        "commands": [
            "CreateProposalCommand",
            "CastVoteCommand",
            "ExecuteProposalCommand"
        ]
    },
    "paths": {
        "routes": "Routes/api.php",
        "migrations": "Database/Migrations",
        "tests": "Tests"
    }
}
