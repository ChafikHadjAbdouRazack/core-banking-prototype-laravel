{
    "$schema": "https://finaegis.io/schemas/module.json",
    "name": "finaegis/exchange",
    "version": "1.3.0",
    "description": "Trading engine with order matching, liquidity pools, and market making",
    "type": "optional",
    "dependencies": {
        "required": {
            "finaegis/shared": "^1.0",
            "finaegis/account": "^1.0",
            "finaegis/compliance": "^1.0"
        },
        "optional": {
            "finaegis/wallet": "^1.0"
        }
    },
    "provides": {
        "interfaces": [
            "App\\Domain\\Exchange\\Contracts\\OrderMatchingServiceInterface",
            "App\\Domain\\Exchange\\Contracts\\LiquidityPoolServiceInterface"
        ],
        "events": [
            "OrderPlaced",
            "OrderMatched",
            "OrderCancelled",
            "TradeExecuted",
            "LiquidityAdded",
            "LiquidityRemoved"
        ],
        "commands": [
            "PlaceOrderCommand",
            "CancelOrderCommand",
            "AddLiquidityCommand"
        ]
    },
    "paths": {
        "routes": "Routes/api.php",
        "migrations": "Database/Migrations",
        "config": "Config/exchange.php",
        "tests": "Tests"
    }
}
