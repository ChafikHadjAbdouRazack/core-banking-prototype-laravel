{
    "name": "finaegis/php-sdk",
    "description": "Official PHP SDK for the FinAegis API",
    "type": "library",
    "keywords": ["finaegis", "api", "sdk", "banking", "finance", "gcu"],
    "homepage": "https://github.com/FinAegis/finaegis-php",
    "license": "MIT",
    "authors": [
        {
            "name": "FinAegis",
            "email": "sdk@finaegis.org"
        }
    ],
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.5",
        "psr/log": "^2.0 || ^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.5",
        "phpstan/phpstan": "^1.9",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "FinAegis\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FinAegis\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse",
        "phpcs": "phpcs",
        "phpcbf": "phpcbf"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}